<Window x:Class="SizeOnDisk.Utilities.ExceptionBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="An error occured" Height="350" Width="500" ResizeMode="CanResizeWithGrip" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Icon="/SizeOnDisk;component/Icons/eventlogError.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox IsReadOnly="True" Text="{Binding Mode=OneWay}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="1" Content="OK" Padding="20,1" HorizontalAlignment="Right" Margin="8,8,20,8" IsDefault="True" IsCancel="True" />
    </Grid>
</Window>
